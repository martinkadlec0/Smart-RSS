@import nib

vendor-prefixes = webkit official
flex-version = flex
support-for-ie = false

#toolbar {
	flex: 0 0 auto;
}

#feed-list {
	flex: 1 1;
	/*padding-top: 3px;*/
	user-select: none;
	overflow-x: hidden;
	overflow-y: auto;
	display: flex;
	flex-flow: column;
}

.list-item {
	flex: 0 0 auto;
	align-items: center;
	width: 100%;
	padding: 3px 5px 3px 15px;
	display: flex;
	font-family: sans-serif;
	font-size: 0.9rem;
	cursor: pointer;
}

.selected {
	background: rgb(148, 198, 248);
}

/*.list-item:active {
	background: rgb(51, 153, 255);	
}*/

.list-item:hover .source-title {
	color: rgb(40, 80, 120);
	text-decoration: underline;
}

.source-icon {
	flex: 0 0 16px;
	height: 16px;
}

.source-title {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	flex: 1 1;
	padding: 0 5px;
	line-height: 1.2;
	font-size: 0.8rem;
}

.source-counter {
	flex: 0 0 auto;
	padding: 0 5px;
	background: #e1e1e1;
	border-radius: 3px;
	height: 100%;
	max-width: 50px;
	overflow: hidden;
}

.source-counter:hover {
	background: #d5d5d5;
}

.selected .source-counter:hover {
	background: #e8e8e8;
}

.selected .source-counter {
	color: black !important;
}

.folder {
	padding-left: 1px !important;
}

.drag-over {
	background: #e3e3ff;
}

.folder-arrow {
	width: 14px;
	height: 14px;
	flex: 0 0 14px;
	background: url('/images/arrow-right.png') no-repeat center center;
}

.opened .folder-arrow {
	background: url('/images/arrow-down.png') no-repeat center center;
}

.has-unread .source-title {
	font-weight: bold;
}

[data-in-folder] {
	padding-left: 30px;
}

#indicator {
	display: none;
	flex: 0 0 1.75rem;
	line-height: 1.75rem;
	width: 100%;
	border-top: 1px solid #a6a6a6;
	

	flex-flow: row;
	align-items: stretch;
	user-select: none;
}

#indicator-progress {
	border-right: 1px solid #a6a6a6;
	font-family: sans-serif;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	background: linear-gradient(to right, #d1d1d1 0%, #eee 0%);
	flex: 1 1 auto;
	text-align: center;
	font-size: 0.8rem;
}

#indicator.indicator-visible {
	display: flex;
}

#indicator-toolbar {
	flex: 0 0 2rem;
	padding: 0.1rem;
	display: flex;
	flex-flow: row;
	align-items: stretch;
}

#indicator-stop {
	cursor: pointer;
	background: url('../images/stop.png') no-repeat center center;
	border-radius: 3px;
	width: 28px;
	border: 1px solid transparent;
}
#indicator-stop:hover, #indicator-stop:active {
	border-color: #c4c4c4;
}
#indicator-stop:active {
	box-shadow: inset 0 1px 3px #bbb;
}

#properties {
	padding: 10px;
	background: #f2f2f2;
	border-bottom: 1px solid #a6a6a6;
	display: none;
}


#properties input, #properties select {
	width: 100%;
	padding: 2px 5px;
}

#properties button {
	width: 49%;
	margin-top: 5px;
	background: white;
	border: 1px solid #a6a6a6;
	border-radius: 4px;
	padding: 3px 0;
	cursor: pointer;
}

#properties button:first-of-type {
	margin-right: 2%;
}

#properties-advanced {
	margin: 5px 0;
	display: none;
}

#advanced-switch {
	user-select: none;
	margin: 5px 0;
	font-weight: bold;
	font-size: 0.75rem;
	cursor: pointer;
	padding-left: 16px;
	font-family: sans-serif;
	background: url('/images/right.png') no-repeat left 45%;
}

#advanced-switch:hover {
	text-decoration: underline;
}

#advanced-switch.switched {
	background: url('/images/down.png') no-repeat left 45%;
}